{
  "name": "@repo/database",
  "version": "0.0.1",
  "exports": {
    "./db": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "generate": "dotenv -e ../../.env -- prisma generate --schema=prisma/schema.prisma",
    "migrate:dev": "dotenv -e ../../.env -- prisma migrate dev --schema=prisma/schema.prisma",
    "db:push": "dotenv -e ../../.env -- prisma db push --schema=prisma/schema.prisma"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "prisma": "6.14.0"
  },
  "dependencies": {
    "@prisma/client": "6.14.0",
    "@types/dotenv": "^8.2.3",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "typescript": "^5.9.2"
  }
}